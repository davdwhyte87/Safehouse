<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="logo_text">
        <item name="android:textSize">35sp</item>
        <item name="android:color">#FFFAF8F9</item>
        <item name="android:textColor">#FFFAF8F9</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textf">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorHint">#0E9614</item>
        <item name="android:color">#0E9614</item>
        <item name="android:textColor">#0E9614</item>
        <item name="android:cacheColorHint">#0E9614</item>
    </style>

    <style name="btn_login">
        <item name="android:padding">10dp</item>
        <item name="android:color">#FFFAF8F9</item>
        <item name="android:background">#0E9614</item>
        <item name="android:textColor">#FFFAF8F9</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="btn_sign_up">
        <item name="android:padding">10dp</item>
        <item name="android:color">#FFFAF8F9</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFAF8F9</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dash_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="dash_btn">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF4F5F4</item>
        <item name="android:padding">10sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
